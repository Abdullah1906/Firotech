@model Firotechbd.Areas.Admin.ViewModels.BlogPostVM
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Create New Blog";
}
<div class="container mt-5">
    <form asp-action="NewBlogCreate" method="post" class="mt-4">
        <div class="mb-3">
            <label for="Title" class="form-label">Blog Title</label>
            <input asp-for="Title" class="form-control" id="Title" placeholder="Enter blog title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Content" class="form-label">Content</label>
            <textarea asp-for="Content" class="form-control" id="Content" rows="8" placeholder="Enter blog content"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" id="Author" placeholder="Enter author name">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="PostedDate" class="form-label">Posted Date</label>
            <input asp-for="PostedDate" class="form-control" id="PostedDate" type="date">
            <span asp-validation-for="PostedDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Tags" class="form-label">Tags</label>
            <input asp-for="Tags" class="form-control" id="Tags" placeholder="e.g. Trading, Finance, Stocks">
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script src="~/plugins/jquery/jquery.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
