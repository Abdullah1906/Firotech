@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add custom styles for icons */
    .feature-icon {
        font-size: 1.5rem;
        margin-right: 10px;
    }

    .gallery-card {
        margin-bottom: 20px;
        background-color: #f8f9fa; /* Light background color */
