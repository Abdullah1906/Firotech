@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Add custom styles for icons */
    .feature-icon {
        font-size: 1.5rem;
        margin-right: 10px;
    }

    .gallery-card {
        margin-bottom: 20px;
        background-color: #f8f9fa; /* Light background color */
        border: 1px solid #dee2e6; /* Border color */
        border-radius: 0.25rem; /* Rounded corners */
        padding: 15px; /* Padding inside card */
    }

    .gallery-title {
        text-align: center;
        margin-top: 10px;
        font-weight: bold;
    }
</style>
@Html.Partial("_HomeFixedMenu")
<!-- Blog Details Page Container -->
<div class="container mt-5">
    <!-- Blog Header -->
    <div class="text-center mb-5">
        <h1 class="display-4">E-Commerce Website Development for Your Stores</h1>
        <p class="text-muted">Published by FiroTech</p>
        <!-- Request for Demo Button -->
        <a href="#contact" class="btn btn-primary mt-3">Request for Demo</a>
    </div>

    <!-- Key Features Section -->
    <div class="row">
        <!-- Key Features for Customers (Left Side) -->
        <div class="col-md-6 key-box">
            <h2 class="mb-4">Key Features for Your Customers</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-image feature-icon text-primary"></i><strong>Stunning Product Galleries:</strong> Showcase your products with high-quality images and engaging galleries.</li>
                <li><i class="fas fa-th feature-icon text-success"></i><strong>Dynamic Categories & Collections:</strong> Organize products into categories for easy navigation.</li>
                <li><i class="fas fa-search feature-icon text-info"></i><strong>Smart Search & Filtering:</strong> Allow customers to find products quickly with smart search and filtering options.</li>
                <li><i class="fas fa-sort feature-icon text-warning"></i><strong>Sort Options:</strong> Let customers sort products by price, popularity, and more.</li>
                <li><i class="fas fa-mobile-alt feature-icon text-danger"></i><strong>Mobile Responsive:</strong> Ensure a seamless shopping experience on all devices.</li>
                <li><i class="fas fa-lock feature-icon text-dark"></i><strong>Secure Payment Processing:</strong> Offer multiple payment methods with secure processing.</li>
                <li><i class="fas fa-star feature-icon text-secondary"></i><strong>Customer Reviews & Ratings:</strong> Build trust with customer feedback and ratings.</li>
                <li><i class="fas fa-shopping-cart feature-icon text-muted"></i><strong>Shopping Cart & Wishlist:</strong> Enable customers to save and manage their desired products.</li>
            </ul>
        </div>

        <!-- Key Features for Admin (Right Side) -->
        <div class="col-md-6 key-box">
            <h2 class="mb-4">Key Features for Admin Management</h2>
            <ul class="list-unstyled">
                <li><i class="fas fa-chart-line feature-icon text-primary"></i><strong>Monthly Sales Reports:</strong> Analyze monthly sales performance with detailed reports.</li>
                <li><i class="fas fa-dollar-sign feature-icon text-success"></i><strong>Profit Reports:</strong> Get insights into profitability and business growth.</li>
                <li><i class="fas fa-users feature-icon text-info"></i><strong>Old Customer Reports:</strong> Track and manage returning customers effectively.</li>
                <li><i class="fas fa-bell feature-icon text-warning"></i><strong>Customer Reminders:</strong> Send reminders to customers for offers and promotions.</li>
                <li><i class="fas fa-barcode feature-icon text-danger"></i><strong>Bar/QR Code Generation and Scanning:</strong> Simplify inventory and sales management with bar/QR codes.</li>
                <li><i class="fas fa-boxes feature-icon text-dark"></i><strong>Stock Management:</strong> Monitor and manage stock levels with ease.</li>
                <li><i class="fas fa-chart-pie feature-icon text-secondary"></i><strong>Customer Insights:</strong> Gain valuable insights into customer behavior and preferences.</li>
                <li><i class="fas fa-warehouse feature-icon text-muted"></i><strong>Inventory Status:</strong> Keep track of inventory with real-time status updates.</li>
                <li><i class="fas fa-cog feature-icon text-primary"></i><strong>Product Management:</strong> Add, edit, and organize products with advanced options.</li>
                <li><i class="fas fa-user-shield feature-icon text-success"></i><strong>User Role Management:</strong> Assign roles and permissions for different admin levels.</li>
                <li><i class="fas fa-database feature-icon text-info"></i><strong>Database Management:</strong> Easy database backups and maintenance.</li>
                <li><i class="fas fa-tags feature-icon text-warning"></i><strong>Discounts & Coupons:</strong> Create and manage discounts, offers, and coupon codes.</li>
                <li><i class="fas fa-chart-bar feature-icon text-danger"></i><strong>Advanced Analytics:</strong> Access comprehensive analytics and reporting tools.</li>
                <li><i class="fas fa-envelope feature-icon text-dark"></i><strong>Email Marketing:</strong> Send promotional emails and newsletters to customers.</li>
                <li><i class="fas fa-sitemap feature-icon text-secondary"></i><strong>SEO Tools:</strong> Optimize your website for search engines with built-in SEO tools.</li>
                <li><i class="fas fa-bell feature-icon text-muted"></i><strong>Notification Management:</strong> Manage customer and admin notifications effectively.</li>
            </ul>
        </div>

    </div>

    <div class="image-container">
        <div class="row">
            <!-- Card 1 -->
            <div class="col-12">
                <div class="card gallery-card">
                    <div class="card-body">
                        <h5 class="gallery-title">Title 1</h5>
                    </div>
                    <img src="https://via.placeholder.com/600x400" class="card-img-top img-fluid" alt="Image 1">
                    
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Card 2 -->
            <div class="col-12">
                <div class="card gallery-card">
                    <div class="card-body">
                        <h5 class="gallery-title">Title 2</h5>
                    </div>
                    <img src="https://via.placeholder.com/600x400" class="card-img-top img-fluid" alt="Image 2">
                    
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Card 3 -->
            <div class="col-12">
                <div class="card gallery-card">
                    <div class="card-body">
                        <h5 class="gallery-title">Title 3</h5>
                    </div>
                    <img src="https://via.placeholder.com/600x400" class="card-img-top img-fluid" alt="Image 3">
                    
                </div>
            </div>
        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var navbar = document.querySelector('.navbar');
        var homePageUrl = 'http://firotechbd.com/'; // URL of the landing home page

        // Check if the current page is the home page
        if (window.location.href === homePageUrl) {
            // Add scroll event listener
            window.addEventListener('scroll', function () {
                if (window.scrollY > 50) { // Adjust scroll position as needed
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }
    });
</script>
