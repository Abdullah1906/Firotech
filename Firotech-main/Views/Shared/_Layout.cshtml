<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ** Basic Page Needs ** -->
    <meta charset="utf-8">
    <title>Firotech - Investment Advice & Software Solutions</title>

    <!-- ** Mobile Specific Metas ** -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Firotech - Professional Investment Advice and Innovative Software Solutions">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta name="author" content="Firotech">
    <meta name="generator" content="Firotech">


    <!-- theme meta -->
    <meta name="theme-name" content="firotech" />

    <title>@ViewData["Title"] - Firotechbd</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Firotechbd.styles.css" asp-append-version="true" />
    <!-- bootstrap.min css -->
    <link rel="stylesheet" href="~/plugins/bootstrap/bootstrap.min.css">
    <!-- fontawesome css -->
    <link rel="stylesheet" href="~/plugins/fontawesome/css/all.css">
    <!-- Icofont -->
    <link rel="stylesheet" href="~/plugins/icofont/icofont.css">

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="~/css/style.css">

</head>
<style>

    .logo {
        font-size: 60px;
        font-family: Arial, sans-serif;
        font-weight: bold;
    }

    .firo {
        background: linear-gradient(to right, #0000ff, #00bfff);
        -webkit-background-clip: text;
        color: transparent;
    }

    .tech {
        background: linear-gradient(to right, #00bfff, #00ffff);
        -webkit-background-clip: text;
        color: transparent;
    }

</style>
<body>

    
    <div data-spy="scroll" data-target="#mainNav">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <!--  FOOTER AREA START  -->
    <section id="footer-section" class="section-padding">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-lg-3">
                    <div class="footer-widget footer-link">
                        <h4>FiroTech</h4>
                        <p>
                            As a investment manager and fiduciary to our clients, our purpose at firotech is to help everyone experience financial well-being. We've been a leading provider of financial technology, and our clients turn to us for the solutions they need when planning for their most important goals.
                            </p>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="footer-widget footer-link">
                        <h4>Quick Links</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a href="/career"><i class="fas fa-angle-right me-2"></i>Career</a>
                            </li>
                            <li>
                                <a href="/about-us"><i class="fas fa-angle-right me-2"></i>About Us</a>
                            </li>
                            <li>
                                <a href="/services"><i class="fas fa-angle-right me-2"></i>Services</a>
                            </li>
                            <li>
                                <a href="/contact"><i class="fas fa-angle-right me-2"></i>Contact Us</a>
                            </li>
                            <li>
                                <a href="/faq"><i class="fas fa-angle-right me-2"></i>FAQ</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="footer-widget footer-text">
                        <h4>Contact Us</h4>
                        <p class="mail"><span>Mail:</span> info@firotechbd.com, hr@firotechbd.com</p>
                        <p><span>+880-17302-77343 </span>(Support)</p>
                        <p><span>+880-19095-58073 </span>(HR)</p>
                        <p><span>Address:</span>The Estern City, Forid market, Azampur, Uttara Dhaka - 1230</p>
                        <!-- Social Media Links -->
                        <div class="social-links">
                            <a href="https://www.facebook.com/firotechbd" target="_blank" class="me-2">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="https://twitter.com/firotechbd" target="_blank" class="me-2">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="https://www.linkedin.com/in/firotechbd" target="_blank">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="footer-widget footer-text">
                        <h4>Our location</h4>

                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d7297.45389117546!2d90.407961!3d23.863828!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2bc337b6b77c3f9f%3A0x44df60b253b9ae23!2sFirotech%20Ltd!5e0!3m2!1sen!2sbd!4v1726421420021!5m2!1sen!2sbd" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="footer-copy">
                        Copyright &copy; @DateTime.Now.Year, All right reserved by  <a href="https://firotechbd.com/">FiroTech</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--  FOOTER AREA END  -->
     
    <!-- Main jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap css -->
    <script src="~/plugins/bootstrap/bootstrap.min.js"></script>

    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcABaamniA6OL5YvYSpB3pFMNrXwXnLwU"></script>
    <script src="~/plugins/google-map/map.js"></script>

    <!-- main script -->
    <script src="~/js/script.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
